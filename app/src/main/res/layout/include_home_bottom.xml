<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabs"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:visibility="visible">
    <!--android:background="@color/rng_black"-->
    <ImageView
        android:id="@+id/iv_bottom_map"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/tab_map_selected"
        android:button="@null"
        android:checked="true"
        android:gravity="center" />

    <ImageView
        android:id="@+id/iv_bottom_find"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/tab_find_unselected"
        android:button="@null"
        android:gravity="center" />


    <ImageView
        android:id="@+id/iv_bottom_shop"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/tab_shop_unselected"
        android:button="@null"
        android:gravity="center" />

    <ImageView
        android:id="@+id/iv_bottom_help"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/tab_help_unselected"
        android:button="@null"
        android:gravity="center" />

    <ImageView
        android:id="@+id/iv_bottom_person"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/tab_person_unselected"
        android:button="@null"
        android:gravity="center" />
</LinearLayout>